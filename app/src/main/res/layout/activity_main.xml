<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/spin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="52dp"
        android:text="Spin"
        android:textSize="34sp"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/elevated_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/elevated_card_view"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/spins_since_last_win_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Spins since last win"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/win_spin_ratio_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/win_spin_ratio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Win / Spin Ratio"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/total_spins_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spins_since_last_win_text" />

            <TextView
                android:id="@+id/total_spins_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Total Spins"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/total_wins_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/win_spin_ratio_text" />

            <TextView
                android:id="@+id/total_wins_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Total Wins"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_spins_text" />

            <TextView
                android:id="@+id/spins_since_last_win_result"
                android:layout_width="65dp"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/textview_border"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/spins_since_last_win_result3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/spins_since_last_win_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/spins_since_last_win_result3"
                android:layout_width="65dp"
                android:layout_height="27dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/textview_border"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/spins_since_last_win_result4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.623"
                app:layout_constraintStart_toEndOf="@+id/win_spin_ratio_text"
                app:layout_constraintTop_toBottomOf="@+id/spins_since_last_win_result" />

            <TextView
                android:id="@+id/spins_since_last_win_result4"
                android:layout_width="65dp"
                android:layout_height="27dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/textview_border"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/spins_since_last_win_result5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.712"
                app:layout_constraintStart_toEndOf="@+id/total_spins_text"
                app:layout_constraintTop_toBottomOf="@+id/spins_since_last_win_result3" />

            <TextView
                android:id="@+id/spins_since_last_win_result5"
                android:layout_width="65dp"
                android:layout_height="27dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/textview_border"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.721"
                app:layout_constraintStart_toEndOf="@+id/total_wins_text"
                app:layout_constraintTop_toBottomOf="@+id/spins_since_last_win_result4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="60dp"
        android:background="#FE0061"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/spin_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fruit_slot_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/image_border"
            app:srcCompat="@drawable/banana"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@drawable/banana" />

        <ImageView
            android:id="@+id/fruit_slot_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/image_border"
            app:srcCompat="@drawable/banana"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@drawable/banana" />

        <ImageView
            android:id="@+id/fruit_slot_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/image_border"
            app:srcCompat="@drawable/banana"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@drawable/banana" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>